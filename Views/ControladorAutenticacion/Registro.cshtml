@model ModeloRegistro
@{
    ViewData["Title"] = "Registro";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(to bottom, #1a1a2e, #16213e);
        min-height: 100vh;
        color: white;
        justify-content: center;
        align-items: center;
		margin: 0;
    }

    .tienda-container {
        max-width: 450px;
        width: 100%;
        background: rgba(239, 68, 68, 0.05);
        border: 2px solid rgba(34, 197, 94, 0.3);
        border-radius: 15px;
        padding: 30px;
        box-sizing: border-box;
    }

    .header-tienda {
        background: rgba(34, 197, 94, 0.1);
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
        border: 2px solid rgba(34, 197, 94, 0.3);
        text-align: center;
    }

    .titulo-seccion {
        font-size: 32px;
        color: #22c55e;
        margin: 0;
        margin-bottom: 10px;
    }

    .subtitulo-seccion {
        font-size: 16px;
        color: #ccc;
        margin: 0;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        margin-bottom: 8px;
        color: #22c55e;
        display: block;
    }

    .form-group input {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid rgba(34, 197, 94, 0.3);
        border-radius: 8px;
        font-size: 16px;
        background: transparent;
        color: white;
        transition: all 0.3s;
        box-sizing: border-box;
    }

    .form-group input:focus {
        outline: none;
        border-color: #22c55e;
        box-shadow: 0 0 8px #22c55e;
    }

    .btn-action {
        padding: 14px;
        background: linear-gradient(135deg, #06402B 0%, #022815 100%);
        border: none;
        border-radius: 8px;
        color: white;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s;
        margin-top: 10px;
    }

    .btn-action:hover {
        background: linear-gradient(135deg, #022815 0%, #06402B 100%);
        transform: scale(1.05);
    }

    .auth-footer {
        text-align: center;
        margin-top: 20px;
        color: #ccc;
    }

    .auth-footer a {
        color: #22c55e;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s;
    }

    .auth-footer a:hover {
        text-decoration: underline;
        color: #dc2626;
    }

    .error-message {
        background: #22c55e;
        border: 1px solid #dc2626;
        color: white;
        padding: 12px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .validation-error {
        color: #22c55e;
        font-size: 14px;
        margin-top: 5px;
    }
	
	body.auth-page .container {
		display: flex !important;
		justify-content: center !important;
		align-items: center !important;
		min-height: 100vh !important;
	}

	body.auth-page main {
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	
    @@media (max-width: 480px) {
        .tienda-container {
            width: 95%;
            padding: 20px;
        }
        .titulo-seccion {
            font-size: 24px;
        }
        .subtitulo-seccion {
            font-size: 14px;
        }
        input[type="text"],
        input[type="password"] {
            font-size: 14px;
            padding: 10px;
        }
        .btn-action {
            font-size: 16px;
            padding: 12px;
        }
    }
</style>

<div class="tienda-container">
    <div class="header-tienda">
        <h1 class="titulo-seccion">Crear Cuenta</h1>
        <p class="subtitulo-seccion">Registrate y Obten 1000 Fichas Gratis :D</p>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-message">
            @Html.ValidationSummary(false)
        </div>
    }

    <form asp-action="Registro" method="post">
        <div class="form-group">
            <label asp-for="NombreUsuario">Usuario</label>
            <input asp-for="NombreUsuario" placeholder="Elige un nombre de usuario" />
            <span asp-validation-for="NombreUsuario" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" placeholder="tu@email.com" />
            <span asp-validation-for="Email" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Contrasena">Contrase単a</label>
            <input asp-for="Contrasena" type="password" placeholder="Minimo 6 caracteres" />
            <span asp-validation-for="Contrasena" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmarContrasena">Confirmar Contrase単a</label>
            <input asp-for="ConfirmarContrasena" type="password" placeholder="Repite tu contrase単a" />
            <span asp-validation-for="ConfirmarContrasena" class="validation-error"></span>
        </div>

        <button type="submit" class="btn-action">Crear Cuenta</button>
    </form>

    <div class="auth-footer">
        多Ya tienes cuenta? <a asp-action="Login">Inicia sesion aqui</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}